/**index.wxss**/
.item{
  width: 100%;
  height: auto;
  border-bottom: 1px solid #ccc;
  float: left;
  padding-bottom: 25rpx;
}
.item-left{
  float:left;
  width: 20%;
  height: 100%;
}
.item-left image{
  width: 100rpx;
  height: 100rpx;
  background-color: #eeeeee;
  margin-top: 20rpx;
  margin-left: 24rpx;
}
.item-right{
  float:left;
  width: 78%;
  height: 100%;
  margin-top: 17rpx;
}
.item-name{
  font-size: 32rpx;
}
.item-content{
  margin-top: 10rpx;
  font-size: 32rpx;
}
.item-right-bottom{
  width: 100%;
  height: 45rpx;
  line-height: 45rpx;
  margin-top: 10rpx;
}
.item-right-bottom-time{
  font-size: 24rpx;
  color:#888;
  float: left;
}
.item-right-bottom-from{
  font-size: 24rpx;
  color:#888;
  float: left;
  margin-left: 25rpx;
}
.item-right-bottom-action{
  width: 265rpx;
  height: 40rpx;
  float: right;
  margin-right: 10rpx;
  
}
.item-right-bottom-action-arrow{
  width: 0;
  height: 0;
  border-left: 10rpx solid #4db0e4;
  border-top: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  margin-top: 10rpx;
  float: left;
  /* display: none; */
}
.item-right-bottom-action-tc{
  border-radius: 5rpx;
  padding: 5rpx;
  height: 100%;
  float: left;
   background-color: #1296db;
  opacity: 0.75; 
  border: 1rpx solid #1296db;
  margin:-7rpx 0 0 0;
  /* display: none; */
  
}
.item-right-bottom-action-tc-right image {
  width: 30rpx;
  height: 32rpx;
  float: left;
  margin-right: 12rpx;
  margin-top: 5rpx;
}
.item-right-bottom-action-tc-left image {
  width: 43rpx;
  height: 40rpx;
  float: left;
  margin-right: 8rpx;

}
.hidden{
  display: none;
}
.showd{
   animation: move 0.3s ease-in  1 alternate;
 
}
@keyframes move {
    30%{
        transform: translateX(-4rpx);
    }
    60%{
       transform: translateX(4rpx);
    }
    100%{
        transform: translateX(0rpx);
    }
}

.item-right-bottom-action-tc-left-wz{
  float: left;
  font-size: 26rpx;
  height: 40rpx;
  line-height: 37rpx;
  color: #fff;
  margin-top: 1rpx;
}
.item-right-bottom-action-tc-left{
  width: 110rpx;
  height: 100%;
  float: left;
  margin-right: 10rpx;
   border-right:1rpx solid #0b85c5; 
}
.item-right-bottom-action-tc-right{
  width: 90rpx;
  height: 100%;
  float: left;

}

.item-right-bottom-action-pic{
  width: 35rpx;
  height: 40rpx;
  float: right;
}
.item-right-bottom-action-pic image{
  width: 45rpx;
  height: 100%;
}
.item-location{
  font-size: 22rpx;
  margin-top: 10rpx;
}
.comments{
  background-color: #efefef;
  border-radius: 5rpx;
  font-size: 28rpx;
  padding: 10rpx;
  width: 97%;
  margin-top: 10rpx;
}

.comments-zan-img{
  
  width:30rpx;
  height: 30rpx;
  float:left;
  margin:5rpx 10rpx 0 0 ;
}
.comments-zan image{
   width: 100%;
   height: 100%;
   line-height: 30rpx;
}
.comments-bar{
  margin-top: 10rpx;
  margin-bottom: 8rpx;
  background-color: #dedede;
  height: 1px;
}
.comments-pl{
  margin-top: 5rpx;
}